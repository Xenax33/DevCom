<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#46518E"
    tools:context=".Fragments.SearchFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile2"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:padding="4dp"
        android:src="@drawable/profile"
        android:visibility="gone"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgImage"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/follow"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#304FFE"
        android:text="Follow"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_profile2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toEndOf="@+id/img_profile2"
        app:layout_constraintTop_toTopOf="@+id/img_profile2"
        app:layout_constraintVertical_bias="0.53"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/name_searchFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:text="TextView"
        android:textColor="#F8F8F8"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/id_searchFragment"
        app:layout_constraintStart_toEndOf="@+id/img_profile2"
        app:layout_constraintTop_toTopOf="@+id/img_profile2"
        app:layout_constraintVertical_bias="0.826"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/id_searchFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="TextView"
        android:textColor="#8F8F8F8F"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/img_profile2"
        app:layout_constraintStart_toEndOf="@+id/img_profile2"
        tools:visibility="visible" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#8F8F8F8F"
        android:backgroundTint="#8F8F8F8F"
        android:iconifiedByDefault="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>
</androidx.constraintlayout.widget.ConstraintLayout>