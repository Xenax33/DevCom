<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    diagonal:layout_constraintBottom_toBottomOf="parent"
    diagonal:layout_constraintEnd_toEndOf="parent"
    diagonal:layout_constraintStart_toStartOf="parent"
    diagonal:layout_constraintTop_toTopOf="parent"
    tools:context=".Fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        diagonal:layout_constraintBottom_toBottomOf="parent"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toTopOf="parent"
        tools:context=".Fragments.ProfileFragment">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/logo2"
            android:visibility="invisible"
            diagonal:layout_constraintBottom_toBottomOf="@+id/name"
            diagonal:layout_constraintStart_toEndOf="@+id/name" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:id="@+id/diagonalLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230mdp"
                android:elevation="30dp"
                diagonal:diagonal_angle="10"
                diagonal:diagonal_direction="left"
                diagonal:diagonal_position="bottom">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_shadow_start_color" />

            </com.github.florent37.diagonallayout.DiagonalLayout>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfileInHome"
            android:layout_width="@dimen/_90mdp"
            android:layout_height="@dimen/_90mdp"
            android:layout_marginTop="200dp"
            android:padding="4dp"
            android:src="@drawable/profile"
            diagonal:civ_border_color="#FFFFFF"
            diagonal:civ_border_width="4dp"
            diagonal:layout_constraintEnd_toEndOf="@+id/linearLayout"
            diagonal:layout_constraintStart_toStartOf="@+id/linearLayout"
            diagonal:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo_bhai_2_bold"
            android:text="Xenax_33"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_18font_mdp"
            diagonal:layout_constraintEnd_toEndOf="parent"
            diagonal:layout_constraintHorizontal_chainStyle="packed"
            diagonal:layout_constraintStart_toStartOf="parent"
            diagonal:layout_constraintTop_toBottomOf="@+id/imgProfileInHome" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            diagonal:cardCornerRadius="10dp"
            diagonal:cardElevation="5dp"
            diagonal:cardMaxElevation="5dp"
            diagonal:layout_constraintEnd_toEndOf="parent"
            diagonal:layout_constraintHorizontal_bias="0.5"
            diagonal:layout_constraintStart_toStartOf="parent"
            diagonal:layout_constraintTop_toBottomOf="@+id/name">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="328dp"
                android:layout_height="79dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp"
                diagonal:layout_constraintEnd_toStartOf="@+id/Friends"
                diagonal:layout_constraintHorizontal_bias="0.5"
                diagonal:layout_constraintHorizontal_chainStyle="spread"
                diagonal:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/Friends"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/baloo_bhai_2"
                    android:text="Friends"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10font_mdp"
                    diagonal:layout_constraintEnd_toEndOf="parent"
                    diagonal:layout_constraintStart_toStartOf="parent"
                    diagonal:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/FriendsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#FEFEFE"
                    android:fontFamily="@font/baloo_bhai_2_bold"
                    android:shadowColor="#FFFFFF"
                    android:text="69"
                    android:textSize="@dimen/_14font_mdp"
                    diagonal:layout_constraintBottom_toBottomOf="parent"
                    diagonal:layout_constraintEnd_toEndOf="parent"
                    diagonal:layout_constraintStart_toStartOf="parent"
                    diagonal:layout_constraintTop_toBottomOf="@+id/Friends"
                    diagonal:layout_constraintVertical_bias="0.88" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_signout"
            android:layout_width="100dp"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo2"
            diagonal:layout_constraintEnd_toEndOf="parent"
            diagonal:layout_constraintStart_toStartOf="parent"
            diagonal:layout_constraintTop_toBottomOf="@+id/cardView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>