<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddFragment">


    <TextView
        android:id="@+id/id_addFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="TextView"
        android:textColor="#8F8F8F"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/img_profile_add"
        app:layout_constraintStart_toEndOf="@+id/img_profile_add"
        app:layout_constraintTop_toBottomOf="@+id/name_addFragement"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/name_addFragement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/img_profile_add"
        app:layout_constraintTop_toTopOf="@+id/img_profile_add"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/img_postView"
        android:layout_width="375dp"
        android:layout_height="291dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/comment"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_postDescription" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#304FFE"
        android:enabled="false"
        android:text="Post"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:text="Create Post"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_24mdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createPost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/baloo_bhai_2_bold"
        android:text="Add to your post"
        android:textColor="#8F8F8F"
        android:textSize="@dimen/_18mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="4dp"
        android:background="#8F8F8F"
        app:layout_constraintBottom_toTopOf="@+id/createPost2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:background="#8F8F8F"
        app:layout_constraintBottom_toTopOf="@+id/btn_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_addImg"
        android:layout_width="55dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line2"
        app:layout_constraintVertical_bias="0.541" />

    <View
        android:id="@+id/Line1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="#8F8F8F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPost" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_add"
        android:layout_width="90dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:padding="4dp"
        android:src="@drawable/profile"
        android:visibility="visible"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Line1"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/txt_postDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/baloo_bhai_2"
        android:hint="State Your Problem"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#7A7575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_add" />

</androidx.constraintlayout.widget.ConstraintLayout>